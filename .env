# データベース設定
# テーブルリセット設定: True（テーブルを強制的に再作成）または False（既存のテーブルを使用）
# RESET_TABLES: 両方のテーブルをリセット（下記の個別設定より優先）
# RESET_VECTOR_TABLE: ベクトルデータベーステーブルのみリセット
# RESET_RAG_TABLE: RAGデータベーステーブルのみリセット
RESET_TABLES=False
RESET_VECTOR_TABLE=False
RESET_RAG_TABLE=False

# ログ設定
# DEBUG: True（詳細なデバッグログを出力）または False（最小限のログを出力）
# LOG_LEVEL: ログレベル（DEBUG/INFO/WARNING/ERROR/CRITICAL）
# DEBUG_MODULES: 特定のモジュールのみデバッグする場合（カンマ区切り、例: rag_searcher,rag_database）
# LOG_FILE: ログファイルのパス
DEBUG=False
LOG_LEVEL=INFO
DEBUG_MODULES=
LOG_FILE=./logs/nakedrag.log

# Ollama設定
# OLLAMA_MODEL: 使用するOllamaモデル名
